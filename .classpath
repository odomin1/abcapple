<classpath>
  <!-- Web content folder -->
  <classpathentry kind="src" path="src/main/webapp"/>

  <!-- Java source files -->
  <classpathentry kind="src" path="src"/>

  <!-- Java Runtime Environment -->
  <classpathentry kind="con" path="org.eclipse.jdt.launching.JRE_CONTAINER"/>

  <!-- Tomcat server libraries -->
  <classpathentry kind="con" path="org.eclipse.jst.server.core.container/org.eclipse.jst.server.tomcat.runtimeTarget/<version>"/>

  <!-- Output folder for compiled classes -->
  <classpathentry kind="output" path="build/classes"/>
</classpath>